<section class="form-auth text-center">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    
    <h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>
    
    <%= render "devise/shared/error_messages", resource: resource %>
       
        <%= f.text_field :first_name, autofocus: true,class:"form-control", placeholder:"First name" %>
    
        
        <%= f.text_field :last_name, autofocus: true,class:"form-control", placeholder:"Last name" %>
        
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control", placeholder:"Email address",autocomplete:"current-email" %>

        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" ,class: "form-control",placeholder:"Password",id:"inputPassword"%>
        
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control",placeholder:"Password ",id:"inputPassword" %>
  
 <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
  
    <% end %>

    <%= render "devise/shared/links" %>
</section>